{
  "compilerOptions": {
		"esModuleInterop": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "postcss.config.js",
    "tailwind.config.js",
    "webpack.config.js"
  ],
  "types": [
    "typePatches"
  ]
}